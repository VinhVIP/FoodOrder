<%@ page language="java" contentType="text/html; charset=UTF-8"
	pageEncoding="UTF-8"%>
<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>Đăng nhập</title>
<base href="${pageContext.servletContext.contextPath}/">
<link rel="stylesheet" type="text/css" href="resources/css/signin.css">
<link href='https://fonts.googleapis.com/css?family=Ubuntu:500'
	rel='stylesheet' type='text/css'>
</head>
<body>
	<form action="account/signin.htm" method="post">
		<div class="signin">
			<div class="signin-header">
				<h1>Đăng nhập</h1>
				<h5 style="color: red; font-style: italic; padding-top: 15px;">${message}</h5>
			</div>
			<div class="signin-form">
				<h3>Nhập Email:</h3>
				<input type="email" placeholder="Nhập Email" name="email"
					value="${email}" /> <br>
				<h3>Nhập Password:</h3>
				<input type="password" placeholder="Nhập password" name="pw"
					value="${pwd}" /> <br> <span
					style="color: #001100; font-style: italic;"> <input
					type="checkbox" name="rm" /> Remember me
				</span> <br>
				<br> <input type="submit" value="Đăng nhập"
					class="signin-button" /> <br>
				<br> <a class="sign-up" href="account/signup.htm">Chưa có
					tài khoản, mời đăng ký</a> <br>
				<h4 class="no-access">
					<a href="account/forgot.htm"
						style="color: #001100; font-style: italic;">Quên mật khẩu?</a>
				</h4>
			</div>
		</div>
	</form>
</body>
<script type="text/javascript" src="resources/js/signin.js"></script>
</html>